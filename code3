//1.递归和非递归求第n个斐波那契数
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
//  递归
int Fibonacci(int n)
{
	if (n <= 2)
	{
		return 1;
	}
	return Fibonacci(n - 2) + Fibonacci(n - 1);
}

int main()
{
	int n = 0;
	printf("请输入想要求第几个斐波那契数：");
	scanf("%d", &n);
	printf("%d\n", Fibonacci(n));
	system("pause");
	return 0;
}

