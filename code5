//统计各种字符个数
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int number = 0;
	int letter = 0;
	int other = 0;
	int i = 0;
	int sz = 0;
	char arr[10];
	printf("请输入10个字符：");
	scanf("%s", arr);
	sz = sizeof(arr) / sizeof(arr[0]) - 1;
	for (i = 0; i <= sz; ++i)
	{
		if ((arr[i] >= 'A'&&arr[i] <= 'Z') || (arr[i] >= 'a'&&arr[i] <= 'z'))
		{
			letter++;
		}
		else if (arr[i] >= '0' && arr[i] <= '9')
		{
			number++;
		}
		else other++;
	}
	printf("字符串中，字母有%d个，数字有%d个，其他字符有%d个。\n", letter, number, other);
	system("pause");
	return 0;
}
