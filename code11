//1.整数二进制存储中1的个数
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int count_one_bits(unsigned int value)
{
	int count = 0;
	int i = 0;
	for (i = 0; i < 32; i++)
	{
		if (((value >> i)&1) == 1)
		{
			count++;
		}
	}
	return count;
}
int main()
{
	int num = 0;
	printf("请输入一个整数：");
	scanf("%d", &num);
	int ret = count_one_bits(num);
	printf("二进制(补码)中有%d个1\n", ret);
	system("pause");
	return 0;
}


//2.获取二进制序列奇数位和偶数位并输出
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int num = 0;
	printf("请输入一个整数：");
	scanf("%d", &num);
	int i = 0;
	int j = 0;
	printf("偶数位是：");
	for (i = 0; i < 32; i += 2)
	{
		printf("%d", (num >> i) & 1);
	}
	printf("\n");
	printf("奇数位是：");
	for (j = 1; j < 32; j += 2)
	{
		printf("%d", (num >> j) & 1);
	}
	printf("\n");
	system("pause");
	return 0;
}


//3.输出整数二进制位
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int number = 0;
	printf("请输入一个整数：");
	scanf("%d", &number);
	int i = 0;
	int b[32] = { 0 };
	for (i = 0; i < 32; ++i)
	{
		b[i] = (number >> i) & 1;
	}
	printf("二进制位是：");
	for (i=i-1; i >= 0; --i)
	{
		printf("%d", b[i]);
	}
	printf("\n");
	system("pause");
	return 0;
}

//4.比较两个整数的二进制位
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int num1 = 0;
	int num2 = 0;
	int count = 0;
	printf("请输入两个整数：");
	scanf("%d %d", &num1, &num2);
	int i = 0;
	for (i = 0; i < 32; ++i)
	{
		if (((num1 >> i) & 1) != ((num2 >> i) & 1))
		{
			count++;
		}
	}
	printf("%d\n", count);
	system("pause");
	return 0;
}
