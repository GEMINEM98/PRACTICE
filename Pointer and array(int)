#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>

//extern int a ;
//int main()
//{
//	printf("a=%d\n", a);
//	system("pause");
//	return 0;
//}


int main()
{
	int arr[10] = { 0 }; 

	printf("arr = %p\n", arr);    // 相同
	printf("&arr = %p\n", &arr);

	printf("sizeof(arr) = %d\n", sizeof(arr));   // 40
	printf("sizeof(&arr) = %d\n", sizeof(&arr)); // 4

	printf("arr+1 = %p\n", arr+1);   // 首地址+4
	printf("&arr+1 = %p\n", &arr+1); // 首地址+40
	
	printf("------------------------------------------------\n");
	int a[] = { 1,2,3,4 };
	printf("a = ");
	for (int i = 0; i < sizeof(a) / sizeof(a[0]); ++i)
	{
		printf("%d ", a[i]);
	}
	printf("\n");
	printf("sizeof(a)=%d\n", sizeof(a));
	printf("sizeof(a+0)=%d\n", sizeof(a+0));
	printf("sizeof(*a)=%d\n", sizeof(*a));
	printf("sizeof(a+1)=%d\n", sizeof(a+1));
	printf("sizeof(a[1])=%d\n", sizeof(a[1]));
	printf("sizeof(&a)=%d\n", sizeof(&a));
	printf("sizeof(*&a)=%d\n", sizeof(*&a));
	printf("sizeof(&a+1)=%d\n", sizeof(&a+1));
	printf("sizeof(&a[0])=%d\n", sizeof(&a[0]));
	printf("sizeof(&a[0]+1)=%d\n", sizeof(&a[0]+1));

	system("pause");
	return 0;
}
