// 模拟实现strncmp（比较）比较到出现0个字符不一样或者一个字符串结束或者num个字符全部比较完
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<assert.h>
#include<stdlib.h>

int my_strncmp(const char* str1, const char* str2, size_t num)
{
	assert(str1&&str2);
	while (num&&*str1&&*str2)
	{
		if (*str1 > *str2)
		{
			return 1;
		}
		else if (*str1 < *str2)
		{
			return -1;
		}
		else
		{
			++str1;
			++str2;
			--num;
		}
	}
	if (num == 0)
	{
		return 0;
	}
	else if (*str1 == '\0')
	{
		return -1;
	}
	else return 1;
}

int main()
{
	char str1[] = "abcdefg";
	char str2[] = "abcd1e";
	printf("%d\n", my_strncmp(str1, str2, 5 * sizeof(char)));
	system("pause");
	return 0;
}
