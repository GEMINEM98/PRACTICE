// way_four：

int count_one_bits(unsigned int value)
{
	int count = 0;
	while (value)
	{
		value = value & (value - 1);
		count++;
	}
	return count;
}



int main()
{
	int num = 0;
	printf("请输入一个整数：");
	scanf("%d", &num);
	int ret = count_one_bits(num);
	printf("二进制中有%d个1\n", ret);
	system("pause");
	return 0;
}
