// 杨氏矩阵
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#define M 3
#define N 3

int Find(int (*a)[N] , int flag)
{
	int left = 0;
	int right = N - 1;
	while ((left >= 0) && (right < N))
	{
		if (a[left][right] < flag)
		{
			++left;
		}
		else if (a[left][right] > flag)
		{
			--right;
		}
		else
		{
			printf("找到了，下标是%d,%d\n", left, right);
			return 1;
		}
	}
	return 0;
}

int main()
{
	int a[M][N] = { 0 };
	int i = 0;
	int j = 0;
	int flag = 0;
	printf("请输入3*3矩阵：\n");
	for (i = 0; i < M; ++i)
	{
		for (j = 0; j < N; ++j)
		{
			scanf("%d", &a[i][j]);
		}
	}
	printf("请输入要查找的数：");
	scanf("%d", &flag);
	int ret = Find(a, flag);
	if (0 == ret)
	{
		printf("没有找到！\n");
	}
	return 0;
}
