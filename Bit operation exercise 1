// 1.Binary bit flip 二进制位翻转
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<math.h>
#include<stdlib.h>

// 以下两种方法：

//unsigned int reverse_bit(unsigned int value)
//{
//	int i = 0;
//	unsigned int sum = 0;
//	for (i = 1; i <= 32; ++i)
//	{
//		sum += ((value >> (i - 1)) & 1) * pow(2, 32 - i);    // ((value >> i) & 1)判断每一位是0还是1
//	}
//	return sum;
//}

unsigned int reverse_bit(unsigned int value)
{
	unsigned int sum = 0;
	int i = 0;
	for (i = 1; i <= 32; ++i)
	{
		sum <<= 1;                         // sum左移，保存后面value的值
		sum |= (value >> (i - 1)) & 1;     // sum的最低位保存value右移的值
	}
	return sum;
}

int main()
{
	unsigned int value = 0;
	unsigned int num = 0;
	printf("请输入一个整数：");
	scanf("%u", &value);
	num = reverse_bit(value);
	printf("%u\n", num);
	system("pause");
	return 0;
}

// ---------------------------------------------------------------------------------------------------

// 2. average of two numbers  求两个数的平均值
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int num1 = 0;
	int num2 = 0;
	int ave1 = 0;
	int ave2 = 0;
	int ave3 = 0;

	printf("请输入两个数：");
	scanf("%d%d", &num1, &num2);

	ave1 = num1 + ((num2 - num1) >> 1);
	ave2 = num1 + (num2 - num1) / 2;
	ave3 = (num1 & num2) + ((num1^num2) >> 1);

	printf("平均数：%d\n", ave1);
	printf("平均数：%d\n", ave2);
	printf("平均数：%d\n", ave3);

	system("pause");
	return 0;
}

// -----------------------------------------------------------------------------------------------------

// 3. Identify a single character  找出单个字符
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>

int main()
{
	int arr[] = { 1,2,3,4,5,4,3,2,1 };
	int i = 0;
	int sz = sizeof(arr) / sizeof(arr[0]);
	for (i = 1; i < sz; ++i)
	{
		arr[0] = arr[0] ^ arr[i];
	}
	printf("%d\n", arr[0]);
	system("pause");
	return 0;
}
